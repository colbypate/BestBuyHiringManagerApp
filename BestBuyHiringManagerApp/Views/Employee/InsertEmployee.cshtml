@model Employee

<h2>Add a New Employee</h2>

@using (Html.BeginForm("InsertEmployeeToDatabase", "Employee", "Post"))
{
    <input asp-for="EmployeeID" type="hidden" value="" />

    <label asp-for="FirstName" class="control-label">FirstName</label>

    <input type="text" name="FirstName" class="form-control" value="" />

    <label asp-for="MiddleInitial" class="control-label">MiddleInitial</label>

    <input type="text" name="MiddleInitial" class="form-control" value="" />

    <label asp-for="LastName" class="control-label">LastName</label>
    <input type="text" name="LastName" class="form-control" value="" />

    <label asp-for="EmailAddress" class="control-label">EmailAddress</label>
    <input type="text" name="EmailAddress" class="form-control" value="" />

    <label asp-for="PhoneNumber" class="control-label">PhoneNumber</label>
    <input type="text" name="PhoneNumber" class="form-control" value="" />

    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="" />

    <label asp-for="DateOfBirth" class="control-label">DateOfBirth</label>
    <input type="datetime-local" name="DateOfBirth" class="form-control" value="" />

    <input type="submit" value="Add Employee" class="btn btn-primary" />


}

